{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "emitDeclarationOnly": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "lib": ["esnext", "dom"],
    "baseUrl": "./src",
    "outDir": "dist",
    "paths": {
      "@/*": ["./*"]
    },
    "experimentalDecorators": true,
    "typeRoots": ["./node_modules/@types"],
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts","/lib/**/*.ts","site.config.ts"],
  "exclude": ["node_modules","test"]
}
