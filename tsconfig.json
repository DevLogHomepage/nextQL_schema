{
  "compilerOptions": {
    "target": "es2016",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    "experimentalDecorators": true,
    "typeRoots": ["./node_modules/@types"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "ts-node": {
    "esm": true,
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts","/lib/**/*.ts","site.config.ts"],
  "exclude": ["node_modules"]
}
